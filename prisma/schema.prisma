generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Deal {
  id              String    @id @default(cuid())
  title           String
  description     String
  price           Float
  comparisonPrice Float?
  imageUrl        String?
  link            String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  deals     Deal[]
}
